# ShortSync Pro - Environment Variables Template
# Copy this file to .env and fill in your API keys

# ============================================================================
# REQUIRED API KEYS
# ============================================================================

# YouTube Data API v3
# Get from: https://console.cloud.google.com/apis/library/youtube.googleapis.com
YOUTUBE_API_KEY=your_youtube_api_key_here

# Cohere AI (Free tier available)
# Get from: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=your_cohere_api_key_here

# Pexels (Free tier available)
# Get from: https://www.pexels.com/api/new/
PEXELS_API_KEY=your_pexels_api_key_here

# ElevenLabs (Free tier available)
# Get from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ============================================================================
# OPTIONAL AI PROVIDERS (enable additional script generation)
# ============================================================================

# Hugging Face Inference API
# Get from: https://huggingface.co/settings/tokens
HF_API_KEY=your_huggingface_api_key_here

# OpenAI API
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# OPTIONAL ASSET PROVIDERS
# ============================================================================

# Unsplash (Free tier available)
# Get from: https://unsplash.com/oauth/applications
UNSPLASH_API_KEY=your_unsplash_api_key_here

# Pixabay (Free tier available)
# Get from: https://pixabay.com/api/docs/
PIXABAY_API_KEY=your_pixabay_api_key_here

# ============================================================================
# OPTIONAL TREND PROVIDERS
# ============================================================================

# NewsAPI (Free tier available)
# Get from: https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key_here

# ============================================================================
# BOT SETTINGS
# ============================================================================

# Environment: development or production
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Maximum videos to upload per day (stay within YouTube limits)
MAX_DAILY_UPLOADS=3

# Minimum seconds between uploads
MIN_UPLOAD_INTERVAL=14400  # 4 hours

# Default video privacy: public, private, unlisted
DEFAULT_PRIVACY=private

# Minimum quality score (0-100)
MIN_QUALITY_SCORE=70.0

# ============================================================================
# DIRECTORY PATHS
# ============================================================================

# Base data directory (relative to project root)
DATA_DIR=./data

# Log directory
LOG_DIR=./logs

# Output directory for generated content
OUTPUT_DIR=./output

# Assets directory
ASSETS_DIR=./assets

# ============================================================================
# MODULE SETTINGS
# ============================================================================

# Trend detection provider: simple, mcp, hybrid
TREND_PROVIDER=simple

# Script generation provider: simple, mcp, hybrid
SCRIPT_PROVIDER=simple

# Asset gathering provider: simple, mcp, hybrid
ASSET_PROVIDER=simple

# Voiceover provider: simple, mcp, hybrid
VOICEOVER_PROVIDER=simple

# Video assembly provider: simple, mcp, hybrid
VIDEO_PROVIDER=simple

# ============================================================================
# MCP SERVER SETTINGS (if using MCP providers)
# ============================================================================

# Trend detection MCP server URL
TREND_MCP_URL=http://localhost:8001

# Script generation MCP server URL
SCRIPT_MCP_URL=http://localhost:8002

# Fact checking MCP server URL (optional)
FACT_CHECK_MCP_URL=http://localhost:8003

# Asset gathering MCP server URL
ASSET_MCP_URL=http://localhost:8004

# ============================================================================
# HEALTH CHECK SETTINGS
# ============================================================================

# Health check server port
HEALTH_PORT=8081

# Health check server host
HEALTH_HOST=0.0.0.0

# ============================================================================
# DATABASE SETTINGS
# ============================================================================

# Database file path (SQLite)
DATABASE_PATH=./data/shortsync.db

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================

# Discord webhook URL for notifications
DISCORD_WEBHOOK_URL=

# Telegram bot token for notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email settings for notifications
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# ============================================================================
# LICENSE SETTINGS
# ============================================================================

# License key (for commercial use)
LICENSE_KEY=

# Channel ID for license validation
CHANNEL_ID=
